from media_sender import MediaSender
from media_receiver import MediaReceiver

class MediaConnection:
    def __init__(self, server_ip, user_id, room_id, port=5005):
        self.server_ip = server_ip
        self.user_id = user_id
        self.room_id = room_id
        self.port = port

        self.sender = MediaSender(server_ip, port, user_id, room_id)
        self.receiver = MediaReceiver(port)

    def start(self):
        self.sender.start()
        self.receiver.start()

    def stop(self):
        self.sender.stop()
        self.receiver.stop()
